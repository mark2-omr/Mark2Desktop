<Page
    x:Class="Mark2.ProgressPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Mark2"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="1*" />
            <RowDefinition Height="1*" />
        </Grid.RowDefinitions>
        <ProgressBar x:Name="progressBar" HorizontalAlignment="Stretch" Height="100" Margin="10,45,10,0" VerticalAlignment="Center"/>
        <Button x:Name="buttonCancel" Content="Cancel" Margin="50,0,50,0" Click="ButtonCancel_Click" HorizontalAlignment="Stretch" Height="226" Grid.Row="1"/>

    </Grid>
</Page>
